import React, { useState } from 'react';

function CashRegister() {
  const [twenties, setTwenties] = useState(0);
  const [tens, setTens] = useState(0);
  const [fifteens, setFifteens] = useState(0);
  const [fives, setFives] = useState(0);
  const [ones, setOnes] = useState(0);
  const [total, setTotal] = useState(0);

  const handleCalculateTotal = () => {
    const totalAmount =
      twenties * 20 + tens * 10 + fifteens * 15 + fives * 5 + ones;
    setTotal(totalAmount);
  };

  return (
    <div>
      <h1>Cash Register</h1>
      <div>
        <label>Number of $20 bills: </label>
        <input
          type="number"
          value={twenties}
          onChange={(e) => setTwenties(parseInt(e.target.value, 10) || 0)}
        />
      </div>
      <div>
        <label>Number of $10 bills: </label>
        <input
          type="number"
          value={tens}
          onChange={(e) => setTens(parseInt(e.target.value, 10) || 0)}
        />
      </div>
      <div>
        <label>Number of $15 bills: </label>
        <input
          type="number"
          value={fifteens}
          onChange={(e) => setFifteens(parseInt(e.target.value, 10) || 0)}
        />
      </div>
      <div>
        <label>Number of $5 bills: </label>
        <input
          type="number"
          value={fives}
          onChange={(e) => setFives(parseInt(e.target.value, 10) || 0)}
        />
      </div>
      <div>
        <label>Number of $1 bills: </label>
        <input
          type="number"
          value={ones}
          onChange={(e) => setOnes(parseInt(e.target.value, 10) || 0)}
        />
      </div>
      <button onClick={handleCalculateTotal}>Calculate Total</button>
      <div>
        <strong>Total Amount: ${total}</strong>
      </div>
    </div>
  );
}

export default CashRegister;
